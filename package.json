{
    "name": "cpapp",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "@sap/xssec": "^3.2.12",
        "express": "^4",
        "sqlite3": "^5.0.2"
    },
    "devDependencies": {
        "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
        "@sap/ux-specification": "^1.96.2",
        "@sapui5/ts-types": "^1.92.2",
        "eslint": "^7.32.0"
    },
    "engines": {
        "node": "^14"
    },
    "scripts": {
        "start": "cds run"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "sapux": [
        "app/risks"
    ],
    "cds": {
        "requires": {
            "db": {
                "kind": "sqlite",
                "credentials": {
                    "database": ":memory:"
                }
            },
            "uaa": {
                "kind": "xsuaa",
                "credentials": {}
            }
        },
        "features": {
            "in_memory_db": true,
            "fiori_preview": true
        }
    }
}